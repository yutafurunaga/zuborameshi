<!DOCTYPE html>
<html>
  <head>
    <title>ArrengeRecipe</title>
     <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <%= render 'layouts/header' %>
     
     
     <h1>レシピ検索</h1>
     <%= form_with(url: recipes_path, method: :get) do |form| %>
      <%= form.label :tag, 'タグ検索:' %>
      <%#= form.text_field :tag %>
      <%= select_tag :tag, options_for_select(ActsAsTaggableOn::Tag.all { |tag| [tag.name, tag.name] }), include_blank: true, class: 'form-control' %>
      <%= form.submit '検索' %>
     <% end %>
    <%= form_tag(search_path, method: :get) do %>
      <!--<div class="form-group">-->
        <%#= label_tag :tag, 'タグ検索:' %>
        <%#= select_tag :tag, options_for_select(ActsAsTaggableOn::Tag.all { |tag| [tag.name, tag.name] }), include_blank: true, class: 'form-control' %>
      <!--</div>-->
       <div class="form-group">
          <%= label_tag :keyword, 'キーワード検索:' %>
          <%= text_field_tag :keyword, params[:keyword], class: 'form-control' %>
           </div>
          <%= submit_tag '検索', class: 'btn btn-primary' %>
      <% end %>
    <main class="mb-auto">
    <%= yield %>
    <%= render 'layouts/footer' %>
  </body>
</html>
