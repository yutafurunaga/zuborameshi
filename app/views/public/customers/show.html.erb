<div class="my-page">
  <h1>マイページ</h1>
  <p>氏名</p>
  <p>姓: <%= @customer.family_name %></p>
  <p>名: <%= @customer.personal_name %></p>
  <p>セイ: <%= @customer.family_name_kana %></p>
  <p>メイ: <%= @customer.personal_name_kana %></p>
  <p>メールアドレス: <%= @customer.email %></p>
  <p>ステータス: <%= @customer.status %></p>

  <%= link_to '編集する', edit_customer_path %>

  <div class="recipes-section">
    <h2>Recipes:</h2>
    <ul>
      <% @recipes.each do |recipe| %>
        <li><%= recipe.dish_name %>: <%= recipe.recipe_description %></li>
      <% end %>
    </ul>
  </div>

  <div class="comments-section">
    <h2>Comments:</h2>
    <ul>
      <% @comments.each do |comment| %>
        <li><%= comment.comment %></li>
      <% end %>
    </ul>
  </div>
</div>
